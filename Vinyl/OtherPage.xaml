<Page x:Class="Vinyl.OtherPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Vinyl"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OtherPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <DataGrid CanUserAddRows="False" x:Name="TypeDgr" AutoGenerateColumns="False" Background="#FF1C1C1C" BorderBrush="Transparent">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Name}" Header="Тип"/>
            </DataGrid.Columns>
        </DataGrid>
        <DataGrid CanUserAddRows="False" x:Name="ConditionDgr" AutoGenerateColumns="False" Grid.Column="1" Background="#FF1C1C1C" BorderBrush="Transparent">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding ID_Condition}" Header="Обозначение"/>
                <DataGridTextColumn Binding="{Binding Designation}" Header="Полное название"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
